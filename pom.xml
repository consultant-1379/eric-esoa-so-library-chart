<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.ericsson.oss.orchestration.so</groupId>
        <artifactId>so-master</artifactId>
        <version>2.0.2</version>
        <relativePath/>
    </parent>
    <groupId>com.ericsson.bos.so</groupId>
    <artifactId>eric-esoa-so-library-chart</artifactId>
    <version>2.6.1-1-SNAPSHOT</version>
    <name>ESOA SO Library Chart</name>
    <description>Project contains common ESOA SO Helm templates</description>
    <packaging>pom</packaging>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <configuration>
                        <excludes combine.children="append">
                            <exclude>**/*Chart.yaml</exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
